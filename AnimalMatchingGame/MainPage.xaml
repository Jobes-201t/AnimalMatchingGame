<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimalMatchingGame.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Button x:Name="PlayAgainButton" Text="Jugar" FontSize="Large" FontAutoScalingEnabled="True" Clicked="PlayAgainButton_Clicked"/>

            <Label x:Name="TimeElapsed" Text="Time Elapsed: 0.0 seconds" FontSize="Large" />

            <FlexLayout x:Name="AnimalButtons" Wrap="Wrap" MinimumWidthRequest="400" IsVisible="False">
                <Button Clicked="Button_Clicked" HeightRequest="100" WidthRequest="100" FontSize="60" BorderColor="#071AFF" BorderWidth="1" />
                <Button Clicked="Button_Clicked" HeightRequest="100" WidthRequest="100" FontSize="60" BorderColor="#071AFF" BorderWidth="1" />
                <Button Clicked="Button_Clicked" HeightRequest="100" WidthRequest="100" FontSize="60" BorderColor="#071AFF" BorderWidth="1" />
                <Button Clicked="Button_Clicked" HeightRequest="100" WidthRequest="100" FontSize="60" BorderColor="#071AFF" BorderWidth="1" />
                <Button Clicked="Button_Clicked" HeightRequest="100" WidthRequest="100" FontSize="60" BorderColor="#071AFF" BorderWidth="1" />
                <Button Clicked="Button_Clicked" HeightRequest="100" WidthRequest="100" FontSize="60" BorderColor="#071AFF" BorderWidth="1" />
                <Button Clicked="Button_Clicked" HeightRequest="100" WidthRequest="100" FontSize="60" BorderColor="#071AFF" BorderWidth="1" />
                <Button Clicked="Button_Clicked" HeightRequest="100" WidthRequest="100" FontSize="60" BorderColor="#071AFF" BorderWidth="1" />
                <Button Clicked="Button_Clicked" HeightRequest="100" WidthRequest="100" FontSize="60" BorderColor="#071AFF" BorderWidth="1" />
                <Button Clicked="Button_Clicked" HeightRequest="100" WidthRequest="100" FontSize="60" BorderColor="#071AFF" BorderWidth="1" />
                <Button Clicked="Button_Clicked" HeightRequest="100" WidthRequest="100" FontSize="60" BorderColor="#071AFF" BorderWidth="1" />
                <Button Clicked="Button_Clicked" HeightRequest="100" WidthRequest="100" FontSize="60" BorderColor="#071AFF" BorderWidth="1" />
                <Button Clicked="Button_Clicked" HeightRequest="100" WidthRequest="100" FontSize="60" BorderColor="#071AFF" BorderWidth="1" />
                <Button Clicked="Button_Clicked" HeightRequest="100" WidthRequest="100" FontSize="60" BorderColor="#071AFF" BorderWidth="1" />
                <Button Clicked="Button_Clicked" HeightRequest="100" WidthRequest="100" FontSize="60" BorderColor="#071AFF" BorderWidth="1" />
                <Button Clicked="Button_Clicked" HeightRequest="100" WidthRequest="100" FontSize="60" BorderColor="#071AFF" BorderWidth="1" />
            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
